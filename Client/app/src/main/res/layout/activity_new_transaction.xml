<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".NewTransaction">

    <Button
        android:id="@+id/scan"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add Product"
        app:layout_constraintBottom_toTopOf="@id/products"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"/>


    <ListView
        android:id="@+id/products"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@id/totalrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scan">

    </ListView>

    <TableRow
        android:id="@+id/totalrow"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toTopOf="@id/discountrow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/products">

        <TextView
            android:id="@+id/tvresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: " />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5€"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

    </TableRow>


    <TableRow
        android:id="@+id/discountrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/voucherow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalrow">

        <CheckBox
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Use Discount?"
            android:textSize="12sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/currentdiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="10dp"
                android:text="0 €"
                android:textColor="#F44336"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mindiscount"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/colorPrimary" />

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:max="50"
                android:progress="10" />

            <TextView
                android:id="@+id/maxdiscount"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical"
                android:text="0"
                tools:text="50" />
        </TableRow>

    </TableRow>

   <TableRow
       android:id="@+id/voucherow"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toTopOf="@id/buttonrow"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/discountrow">

       <CheckBox
           android:id="@+id/voucher"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Use Voucher?"
           android:textSize="12sp" />

       <Spinner
           android:id="@+id/spinner1"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:background="@android:drawable/btn_dropdown"
           android:spinnerMode="dropdown" />

   </TableRow>

       <TableRow
           android:id="@+id/buttonrow"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/voucherow">

           <Button
               android:id="@+id/generateQRcode"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Finish"
               android:backgroundTint="@color/colorPrimary"
               android:textColor="#FFFFFF"/>

           <Button
               android:id="@+id/back"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:onClick="backButton"
               android:text="Back"
               android:backgroundTint="@color/colorPrimary"
               android:textColor="#FFFFFF"/>
       </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>
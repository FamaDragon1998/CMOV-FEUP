<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.feup.apm.ACME">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.feup.apm.ACME.NewTransaction" />
        <activity
            android:name="org.feup.apm.ACME.ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name="org.feup.apm.ACME.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.feup.apm.ACME.DetailsActivity"
            android:label="Details" />
        <activity
            android:name="org.feup.apm.ACME.DetailsTransaction"
            android:label="Transaction Details" />
    </application>

</manifest>